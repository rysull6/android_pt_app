<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/single_image"
            android:layout_gravity="center_vertical"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="40dp">

            <TextView
                android:id="@+id/single_title"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/single_info"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_rep"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Rep Count:"
            />

        <TextView
            android:id="@+id/single_rep_count"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_hold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Hold:"
            />

        <TextView
            android:id="@+id/single_hold_count"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_perform"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Perform Count:"
            />

        <TextView
            android:id="@+id/single_perform_count"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="3"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
        android:gravity="center"

        android:orientation="horizontal">

    <TextView
        android:id="@+id/label_complete"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="Complete:"
        />

    <TextView
        android:id="@+id/single_complete_count"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="3"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_time"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Complete:"
            />

        <TextView
            android:id="@+id/single_time_count"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="3"
            />
    </LinearLayout>

</LinearLayout>